<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include/exclude rules for auto backup -->
        <!-- Allow/disallow entire app data backup -->
        <include domain="sharedpref" />
        <exclude domain="sharedpref" path="device.xml" />
    </cloud-backup>
    
    <!-- Backup rules for Direct Boot -->
    <device-transfer>
        <include domain="sharedpref" />
        <exclude domain="sharedpref" path="device.xml" />
    </device-transfer>
</data-extraction-rules>