<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include/exclude rules for backup -->
    <include domain="sharedpref" />
    <exclude domain="sharedpref" path="device.xml" />
    <exclude domain="sharedpref" path="sensitive_data.xml" />
    
    <!-- Include database files -->
    <include domain="database" />
    
    <!-- Exclude specific files that shouldn't be backed up -->
    <exclude domain="file" path="cache" />
    <exclude domain="file" path="temp" />
</full-backup-content>